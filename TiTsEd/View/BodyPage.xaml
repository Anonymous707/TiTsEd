<UserControl x:Class="TiTsEd.View.BodyPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:common="clr-namespace:TiTsEd.Common"
             xmlns:view="clr-namespace:TiTsEd.View"
             mc:Ignorable="d" 
             d:DesignWidth="1024" d:DesignHeight="600">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/PageInclude.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Vertical">
                <Border Style="{StaticResource HeaderBorder}">
                    <TextBlock Text="General" Style="{StaticResource Header}"/>
                </Border>
                <common:AutoGrid>
                    <TextBlock              Text="Hip Rating"/>
                    <common:MyNumericBox    Value="{Binding Game.HipRating}" Tip="{Binding Game.HipRatingTip}" />

                    <TextBlock              Text="Butt Rating"/>
                    <common:MyNumericBox    Value="{Binding Game.ButtRating}" Tip="{Binding Game.ButtRatingTip}" />

                    <TextBlock              Text="Belly Rating"/>
                    <common:MyNumericBox    Value="{Binding Game.BellyRating}" />

                    <TextBlock              Text="Arms"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.ArmType}" ItemsSource="{Binding Data.Body.ArmTypes}"/>
                </common:AutoGrid>
                <Expander Header="Arm Flags" Margin="60,0,0,0">
                    <view:FlagBox ItemsSource="{Binding Game.ArmFlags}" />
                </Expander>
                <common:AutoGrid>
                    <TextBlock              Text="Leg Count"/>
                    <common:MyNumericBox    Value="{Binding Game.LegCount}" />

                    <TextBlock              Text="Legs"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.LegType}" ItemsSource="{Binding Data.Body.LegTypes}"/>
                </common:AutoGrid>
                <Expander Header="Leg Flags" Margin="60,0,0,0">
                    <view:FlagBox ItemsSource="{Binding Game.LegFlags}" />
                </Expander>
                <common:AutoGrid>
                    <TextBlock              Text="Wing Count"/>
                    <common:MyNumericBox    Value="{Binding Game.WingCount}" />

                    <TextBlock              Text="Wing Type"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.WingType}" ItemsSource="{Binding Data.Body.WingTypes}"/>
                </common:AutoGrid>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Vertical">
                <Border Style="{StaticResource HeaderBorder}">
                    <TextBlock Text="Tail" Style="{StaticResource Header}"/>
                </Border>
                <common:AutoGrid>
                    <TextBlock              Text="Tail Count"/>
                    <common:MyNumericBox    Value="{Binding Game.TailCount}" />
                    
                    <TextBlock              Text="Tail Type"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.TailType}" ItemsSource="{Binding Data.Body.TailTypes}"/>

                    <TextBlock              Text="Tail Genital Type"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.TailGenital}" ItemsSource="{Binding Data.Body.TailGenitalTypes}"/>

                    <TextBlock              Text="Tail Gential Race"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.TailGenitalRace}" ItemsSource="{Binding Data.Body.TailGenitalRaceTypes}"/>

                    <TextBlock              Text="Tail Genital Color"/>
                    <ComboBox               Text="{Binding Game.TailGenitalColor}" ItemsSource="{Binding Data.Body.SkinTones}" Style="{StaticResource EditableTextBox}"/>
                </common:AutoGrid>
                <Expander Header="Tail Flags" Margin="60,0,0,0">
                    <view:FlagBox ItemsSource="{Binding Game.TailFlags}" />
                </Expander>
            </StackPanel>

            <StackPanel Grid.Column="3" Grid.Row="1" Orientation="Vertical" Grid.RowSpan="3">
                <common:ArrayEditor Header="Breasts" Items="{Binding Game.Breasts}" Capacity="5" MinCapacity="1">
                    <common:ArrayEditor.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Description}"/>
                        </DataTemplate>
                    </common:ArrayEditor.ItemTemplate>
                    <common:AutoGrid>
                        <TextBlock              Text="Rating"/>
                        <common:MyNumericBox    Value="{Binding Rating}" Min="0" Lower="0" Upper="{Binding MaxRating}" Tip="{Binding RatingDescription}"/>

                        <TextBlock              Text="Breast count"/>
                        <common:MyNumericBox    Value="{Binding BreastCount}" Lower="2" Min="2" Upper="8" Max="8" ToolTip="Just one doesn't make sense in the in game descriptions." />

                        <TextBlock              Text="Nipples Type"/>
                        <common:MyComboBox      SelectedValue="{Binding NippleType}" ItemsSource="{Binding NippleTypes}" />

                        <TextBlock              Text="Fullness"/>
                        <common:MyNumericBox    Value="{Binding Fullness}" />
                    </common:AutoGrid>
                </common:ArrayEditor>
                <Border Style="{StaticResource HeaderBorder}" />
                <common:AutoGrid>
                    <TextBlock              Text="Nipple Color"/>
                    <ComboBox               Text="{Binding Game.NippleColor}" ItemsSource="{Binding Data.Body.SkinTones}" Style="{StaticResource EditableTextBox}"/>

                    <TextBlock              Text="Nipples Per Breast"/>
                    <common:MyNumericBox    Value="{Binding Game.NipplesPerBreast}" />

                    <TextBlock              Text="Dick Nipple Type"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.DickNippleType}" ItemsSource="{Binding Data.Body.DickNippleTypes}" />

                    <TextBlock              Text="Dick Nipple Multiplier"/>
                    <common:MyNumericBox    Value="{Binding Game.DickNippleMultiplier}" />

                    <TextBlock              Text="Milk Type"/>
                    <common:MyComboBox      SelectedValue="{Binding Game.MilkType}" ItemsSource="{Binding Data.Body.MilkTypes}" />

                    <TextBlock              Text="Milk Fullness"/>
                    <common:MyNumericBox    Value="{Binding Game.MilkFullness}" />
                    
                    <TextBlock              Text="Milk Rate"/>
                    <common:MyNumericBox    Value="{Binding Game.MilkRate}" />

                    <TextBlock              Text="Milk Multiplier"/>
                    <common:MyNumericBox    Value="{Binding Game.MilkMultiplier}" />

                    <TextBlock              Text="Milk Storage Multiplier"/>
                    <common:MyNumericBox    Value="{Binding Game.MilkStorageMultiplier}" />
                    
                </common:AutoGrid>
                
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
